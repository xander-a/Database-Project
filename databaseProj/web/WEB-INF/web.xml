<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Define the servlet -->
    <servlet>
        <servlet-name>form</servlet-name>
        <servlet-class>ph.database.controller.form</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>ph.database.controller.Home</servlet-class>
    </servlet>
    

    <!-- Map the servlet to URL patterns -->
    <servlet-mapping>
        <servlet-name>form</servlet-name>
        <url-pattern>/form</url-pattern> <!-- Primary mapping -->
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>form</servlet-name>
        <url-pattern>/form/create/form</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>form</servlet-name>
        <url-pattern>/form/create</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>form</servlet-name>
        <url-pattern>/form/update</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>form</servlet-name>
        <url-pattern>/form/update/form</url-pattern>
    </servlet-mapping>
        <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>




    <!-- Session configuration -->
    <session-config>
        <session-timeout>30</session-timeout> <!-- Session timeout in minutes -->
    </session-config>

</web-app>
